{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target": "aws-cdk-lib",
    "aws-cdk:enableDiffNoFail": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLoggingConfiguration": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    
    "_comment": "=== F5 IMPROVEMENTS: Essential Security Feature Flags (CDK v2 Compatible) ===",
    "@aws-cdk/aws-s3:publicAccessBlockedByDefault": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-ec2:ebsDefaultGp3Volume": true,
    "@aws-cdk/core:newStyleStackSynthesis": true,
    
    "_comment2": "=== ADDITIONAL RECOMMENDED FLAGS FOR DATA LAKE ===",
    "@aws-cdk/aws-lambda:useCdkManagedLogGroup": true,
    "@aws-cdk/aws-ec2:bastionHostUseAmazonLinux2023ByDefault": true,
    "@aws-cdk/aws-s3:setUniqueReplicationRoleName": true,
    "@aws-cdk/aws-iam:oidcRejectUnauthorizedConnections": true,
    "@aws-cdk/aws-efs:defaultEncryptionAtRest": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-kms:defaultKeyPolicies": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:explicitStackTags": true,
    
    "project": {
      "name": "agesic-datalake-poc",
      "prefix": "agesic-dl-poc",
      "environment": "poc",
      "solution": "demo"
    },
    "tags": {
      "proveedor": "HG",
      "proyecto": "PoC-Datalake",
      "service": "datalake"
    },
    "networking": {
      "vpc_cidr": "10.0.0.0/16",
      "availability_zones": 2
    },
    "kinesis": {
      "shard_count": 1,
      "retention_hours": 24,
      "firehose_buffer_size": 5,
      "firehose_buffer_interval": 300,
      "compression": "GZIP"
    },
    "s3": {
      "lifecycle": {
        "transition_to_ia_days": 90,
        "transition_to_glacier_days": 120,
        "expiration_days": 180
      }
    },
    "glue": {
      "crawler_schedule": "cron(0 2 * * ? *)",
      "etl_worker_type": "G.1X",
      "etl_number_of_workers": 2
    },
    "cloudwatch": {
      "log_retention_days": 7
    },
    "notifications": {
      "email": "efigueroa@hg.com.uy"
    },
    "visualization": {
      "instance_type": "t3.small",
      "enable_waf": false,
      "enable_scheduling": false,
      "grafana_version": "12.1.0",
      "schedule": {
        "start_time": "09:00",
        "stop_time": "17:00",
        "timezone": "America/Montevideo",
        "days": ["MON", "TUE", "WED", "THU", "FRI"]
      }
    },
    "ec2": {
      "instance_type": "t3.micro",
      "enable_scheduling": true,
      "schedule": {
        "start_time": "09:00",
        "stop_time": "17:00",
        "timezone": "America/Montevideo",
        "days": ["MON", "TUE", "WED", "THU", "FRI"]
      }
    },
    "f5_logs": {
      "source_bucket": "rawdata-analytics-poc-voh9ai",
      "source_file": "extracto_logs_acceso_f5_portalgubuy.log",
      "local_directory": "/var/log/logs_f5",
      "processing_mode": "manual",
      "agents": {
        "kinesis_agent": {
          "enabled": true,
          "batch_size": 500,
          "batch_timeout": 5000
        },
        "fluentd": {
          "enabled": true,
          "buffer_chunk_limit": "8m",
          "buffer_queue_limit": 32
        }
      }
    }
  }
}
